// Q11.cpp
#include <iostream>
using namespace std;

class HashTable {
    struct Node{ int key; Node* next; };
    Node* table[10];
public:
    HashTable();
    void insertKey(int k);
    void searchKey(int k);
    void display();
};

HashTable::HashTable(){ for(int i=0;i<10;i++) table[i]=NULL; }

void HashTable::insertKey(int k){
    int idx = k % 10;
    Node* p = new Node{ k, table[idx] };
    table[idx] = p; cout<<"Inserted\n";
}

void HashTable::searchKey(int k){
    int idx = k % 10; Node* t=table[idx];
    while(t){ if(t->key==k){ cout<<"Found\n"; return; } t=t->next; }
    cout<<"Not found\n";
}

void HashTable::display(){
    for(int i=0;i<10;i++){
        cout<<i<<" -> ";
        Node* t=table[i];
        while(t){ cout<<t->key<<" -> "; t=t->next; }
        cout<<"NULL\n";
    }
}

int main(){
    HashTable h; int ch,k;
    do{
        cout<<"\n1.Insert\n2.Search\n3.Display\n4.Exit\nChoice: "; cin>>ch;
        switch(ch){
            case 1: cout<<"Enter key: "; cin>>k; h.insertKey(k); break;
            case 2: cout<<"Enter key: "; cin>>k; h.searchKey(k); break;
            case 3: h.display(); break;
            case 4: cout<<"Exiting Q11\n"; break;
            default: cout<<"Invalid\n";
        }
    }while(ch!=4);
    return 0;
}
