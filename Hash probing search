// Q13.cpp
#include <iostream>
using namespace std;

class LinearHash {
    int table[10];
public:
    LinearHash(); void insertKey(int k); void searchKey(int k); void display();
};

LinearHash::LinearHash(){ for(int i=0;i<10;i++) table[i]=-1; }

void LinearHash::insertKey(int k){
    int idx=k%10, start=idx;
    while(table[idx]!=-1){ idx=(idx+1)%10; if(idx==start){ cout<<"Full\n"; return; } }
    table[idx]=k; cout<<"Inserted\n";
}

void LinearHash::searchKey(int k){
    int idx=k%10, start=idx;
    while(table[idx]!=k){
        if(table[idx]==-1){ cout<<"Not found\n"; return; }
        idx=(idx+1)%10; if(idx==start){ cout<<"Not found\n"; return; }
    }
    cout<<"Found at index "<<idx<<"\n";
}

void LinearHash::display(){
    for(int i=0;i<10;i++) cout<<i<<" : "<<table[i]<<"\n";
}

int main(){
    LinearHash h; int ch,k;
    do{
        cout<<"\n1.Insert\n2.Search\n3.Display\n4.Exit\nChoice: "; cin>>ch;
        switch(ch){
            case 1: cout<<"Enter key: "; cin>>k; h.insertKey(k); break;
            case 2: cout<<"Enter key: "; cin>>k; h.searchKey(k); break;
            case 3: h.display(); break;
            case 4: cout<<"Exiting Q13\n"; break;
            default: cout<<"Invalid\n";
        }
    }while(ch!=4);
    return 0;
}
